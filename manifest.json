{
  "name": "Unified Graphics",
  "description": "Replace all images with Unicorns",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "http://*/*",
    "https://*/*"
  ],
    
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

   "content_scripts": [
     {
       "matches": ["http://*/*", "https://*/*"],
       "js": ["content.js"]
     }
   ],

    "icons": { "16": "icon.png",
           "48": "icon.png",
          "128": "icon.png" },
    
  "browser_action": {
    "default_title": "Replace all images with Unicorns",
      "default_icon": "iconoff.png"
  },
  "manifest_version": 2
}